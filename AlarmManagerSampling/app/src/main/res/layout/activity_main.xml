<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tv_selected_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:45 PM"
            android:textSize="45dp"

            android:layout_marginVertical="15dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_select_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintVertical_chainStyle="packed"
            />

        <Button
            android:id="@+id/btn_select_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Time"

            android:layout_marginVertical="15dp"

            app:layout_constraintTop_toBottomOf="@+id/tv_selected_time"
            app:layout_constraintBottom_toTopOf="@+id/btn_set_alarm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintVertical_chainStyle="packed"
            />

        <Button
            android:id="@+id/btn_set_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Alarm"

            android:layout_marginVertical="15dp"

            app:layout_constraintTop_toBottomOf="@+id/btn_select_time"
            app:layout_constraintBottom_toTopOf="@+id/btn_cancle_alarm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintVertical_chainStyle="packed"

            />
        <Button
            android:id="@+id/btn_cancle_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancle Time"

            android:layout_marginVertical="15dp"

            app:layout_constraintTop_toBottomOf="@+id/btn_set_alarm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintVertical_chainStyle="packed"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>